@model Job_Aplication_Tracker.Models.Application

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Position
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.position)
        </dd>
        <dt class = "col-sm-2">
            Company
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.enterprise)
        </dd>
        <dt class = "col-sm-2">
            Confidence
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.confidence; i++)
            {
                <span class="star" style="color: gold">&#9733;</span>
            }
            @for (int i = Model.confidence; i < 5; i++)
            {
                <span class="star" style="color: gray">&#9733;</span>
            }
        </dd>
        <dt class="col-sm-2">
            Link
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.link">
                @Html.DisplayFor(model => model.link)
            </a>
        </dd>
        <dt class="col-sm-2">
            Application date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.application_date)
        </dd>
        <dt class = "col-sm-2">
            Current state
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
        <dt class = "col-sm-2">
            State change date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state_change_date)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-danger ms-2">Back to List</a>
</div>
