@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav flex-grow-1 justify-content-start justify-content-sm-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item list-unstyled nav-item fw-bold">
            <a id="manage" class="nav-link fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item list-unstyled nav-item fw-bold">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link fw-bold">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item list-unstyled nav-item fw-bold">
            <a class="nav-link fw-bold" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item list-unstyled nav-item fw-bold">
            <a class="nav-link fw-bold" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
